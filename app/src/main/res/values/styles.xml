<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Ellipse Styles -->
    <style name="blueEllipseStyle">
        <item name="android:layout_height">@dimen/ellipse_height</item>
        <item name="android:layout_width">@dimen/ellipse_width</item>
        <item name="android:background">@drawable/blue_ellipse</item>
    </style>
    <style name="greenEllipseStyle">
        <item name="android:layout_height">@dimen/ellipse_height</item>
        <item name="android:layout_width">@dimen/ellipse_width</item>
        <item name="android:background">@drawable/green_ellipse</item>
    </style>
    <style name="pinkEllipseStyle">
        <item name="android:layout_height">@dimen/ellipse_height</item>
        <item name="android:layout_width">@dimen/ellipse_width</item>
        <item name="android:background">@drawable/pink_ellipse</item>
    </style>


    <!-- Image Styles -->
    <style name="cv_small_image_style">
        <item name="android:layout_height">@dimen/img_small_height</item>
        <item name="android:layout_width">@dimen/img_small_width</item>
    </style>
    <style name="cv_large_image_style">
        <item name="android:layout_height">@dimen/img_large_height</item>
        <item name="android:layout_width">@dimen/img_large_width</item>
    </style>


    <!-- Text Styles -->
    <style name="tv_start_header_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tv_start_size</item>
    </style>

    <style name="tv_start_subtitle_style">
        <item name="android:textSize">@dimen/tv_subtitle_size</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="tv_title_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/tv_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">120dp</item>
        <item name="android:layout_marginTop">100dp</item>
    </style>

    <!-- Button Styles -->
    <style name="btn_style">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginHorizontal">100dp</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:fontFamily">@font/inder</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="back_btn_style">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/image_bg</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <style name="join_btn_style">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginHorizontal">75dp</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:fontFamily">@font/inder</item>
        <item name="android:textSize">@dimen/btn_join_text_size</item>
    </style>

    <!-- Edit Text Styles -->
    <style name="et_style">
        <item name="android:textSize">@dimen/et_text_size</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="et_password_style">
        <item name="android:textSize">@dimen/et_text_size</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <dimen name="tv_start_size">60sp</dimen>
</resources>