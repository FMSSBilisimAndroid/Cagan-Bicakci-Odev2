<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpScreenActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_back"
            style="@style/back_btn_style"
            android:contentDescription="@string/back_btn" />

        <View
            style="@style/pinkEllipseStyle"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="59dp"
            />

        <View
            style="@style/pinkEllipseStyle"
            android:layout_marginStart="93dp"
            android:layout_marginTop="312dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/tv_title_style"
                android:text="@string/create_account" />

            <EditText
                android:id="@+id/et_create_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/et_style"
                android:hint="@string/enter_email_hint"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/et_create_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/et_style"
                android:hint="@string/create_username"
                android:inputType="text"
                />

            <EditText
                android:id="@+id/et_create_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/et_style"
                android:hint="@string/create_password"
                android:inputType="textPassword"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/btn_style"
                android:text="@string/sign_up_btn_text"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/btn_corner_radius" />

        </LinearLayout>
    </FrameLayout>

</ScrollView>